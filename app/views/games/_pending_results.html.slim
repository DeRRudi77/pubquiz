.card-content
  h1.title = game.name
  == render 'components/form/notice', notice: notice
  == render 'games/round_tabs', game: game

  .content
    - game.teams.each do |team|
      == render 'games/team_answers', team: team, round: current_viewing_round(game)

  footer.card-footer
    .card-footer-item
    .card-footer-item
    .card-footer-item
      = form_with(model: game, url: show_results_game_path(game)) do |form|
        = form.submit t(:show_results), class: 'button is-primary is-inverted'
